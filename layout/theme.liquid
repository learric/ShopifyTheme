  </head>

    <body itemscope itemtype="//schema.org/WebPage" class="{% if template == 'index' %}index {% if settings.home_show_marketing_module %} has-marketing-module {% endif %}{% endif %} {% if settings.enable_slideshow %}has-slideshow{% else %}has-not-slideshow{% endif %}">
        <div class="page-wrapper" {% if template == 'index' %}style="padding-bottom: 0"{% endif %}>
            {% include 'header' %}

            {% comment %}
                For index this is a bit special, as we want to allow each block to have its own color, so we must not wrap
                around a general container
            {% endcomment %}

            {% if template == 'index' or template == 'product' %}
                {{ content_for_layout }}
            {% else %}
                <div class="container" role="main">
                    {{ content_for_layout }}
                </div>
            {% endif %}
        </div>

        {% include 'footer' %}

        {% include 'currencies' %}

        <script>
            /**
             * Shopify does not have a way to detect if an asset exist, so we need to rely on this trick
             */
            var retinaDoesNotExist = function() {
                // If the Retina does not exist, we force to show the "normal" logo
                $('.logo-retina').hide();
                $('.logo-regular').show().css('display', 'inline-block');
            };
        </script>
    </body>
</html>
